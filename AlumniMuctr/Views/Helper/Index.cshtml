@model IEnumerable<Helper>

<div id="menuToggle">
    <input type="checkbox" />
    <span></span>
    <span></span>
    <span></span>
    <ul id="menu">
        <li>
            <a asp-controller="Home" asp-action="Index" type="submit">Главная</a>
        </li>
        <li>
            <a asp-controller="Admin" asp-action="Index" type="submit">Все таблицы</a>
        </li>
        <li>
            <a asp-controller="Admin" asp-action="Logout" type="submit">Выйти</a>
        </li>
    </ul>
</div>

    <partial name="_Notifications" />
<div class="container p-3 table-area-helper">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-primary">Список вопросов</h2>
            </div>
            
        </div>
        <br />


    <table class="table table-bordered" style="width: 100%">
            <thead class="reg-table-head">
                <tr>
                    <th>Email</th>
                    <th>Имя</th>
                    <th>Сообщение</th>
                </tr>
            </thead>
        <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td>
                        @obj.Email
                    </td>
                    <td>
                        @obj.Name
                    </td>
                    <td>
                        @obj.Info
                    </td>

                    <td width="20%">
                        <div class="w-75 btn-group" role="group">
                            <a class="text-decoration-none btn btn-warning" asp-controller="Helper" asp-action="WatchMore" asp-route-id="@obj.Id">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-eye-fill" viewBox="0 0 16 16">
                                    <path d="M10.5 8a2.5 2.5 0 1 1-5 0 2.5 2.5 0 0 1 5 0z" />
                                    <path d="M0 8s3-5.5 8-5.5S16 8 16 8s-3 5.5-8 5.5S0 8 0 8zm8 3.5a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7z" />
                                </svg>
                            </a>
                            <a class="text-decoration-none btn btn-danger" asp-controller="Helper" asp-action="Delete" asp-route-id="@obj.Id" onclick="return confirm('Вы уверены что хотите удалить новость?')">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                    <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                    <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                                </svg>
                            </a>
                        </div>
                    </td>
                </tr>
                }
        </tbody>
    </table>
 </div>
